# ========================================
# VitalFit Backend Environment Variables
# ========================================

# ===== 기본 설정 =====
NODE_ENV=production
PORT=8080

# ===== JWT 보안 =====
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters

# ===== 데이터베이스 설정 (Azure PostgreSQL) =====
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=vitalfit
DB_HOST=your-postgresql-server.postgres.database.azure.com
DB_DIALECT=postgres
DB_PORT=5432
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# ===== 이메일 설정 (선택사항) =====
EMAIL_PASSWORD=your_gmail_app_password
FRONTEND_URL=https://your-frontend-domain.com

# ===== 시드 데이터 설정 =====
SEED_DATA=false
SEED_TOKEN=your-seed-token-here

# ===== Azure 최적화 설정 =====
WEBSITE_NODE_DEFAULT_VERSION=20.11.0
WEBSITE_RUN_FROM_PACKAGE=1
WEBSITE_ENABLE_APP_SERVICE_STORAGE=false
